            android:theme="@style/AllWhite">

        </activity>

        <activity android:name=".activities.MainActivity"
            android:theme="@style/AllWhite">
        </activity>

        <activity android:name=".activities.QuestionnaireActivity"
            android:theme="@style/AllWhite">
        </activity>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
